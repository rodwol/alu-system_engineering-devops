#!/usr/bin/env bash

# Ensure the script is run as root
if [ "$(id -u)" != "0" ]; then
   echo "This script must be run as root" 
   exit 1
fi

# Update package list and install nginx
apt-get update
apt-get install -y nginx

# Create the custom index.html page with the required content
echo "Holberton School" > /var/www/html/index.html

# Start Nginx service
service nginx start

# Ensure Nginx is enabled to start on boot
systemctl enable nginx

echo "Nginx has been installed and configured. It should be listening on port 80 and returning a page with 'Holberton School'."
